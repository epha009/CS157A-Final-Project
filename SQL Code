Creating tables:

CREATE TABLE Anime (
AnimeID INTEGER PRIMARY KEY AUTOINCREMENT
NOT NULL
UNIQUE,
AnimeName STRING (255) NOT NULL
UNIQUE,
Rating DOUBLE NOT NULL,
ReleaseDate DATE NOT NULL
);

CREATE TABLE Genre (
GenreID INTEGER PRIMARY KEY AUTOINCREMENT
NOT NULL
UNIQUE,
GenreName STRING (255) NOT NULL
UNIQUE
);

CREATE TABLE AnimeGenre (
AnimeID INTEGER REFERENCES Anime (AnimeID)
NOT NULL,
GenreID INTEGER REFERENCES Genre (GenreID)
NOT NULL
);

CREATE TABLE StreamingService (
ServiceID INTEGER PRIMARY KEY AUTOINCREMENT
UNIQUE
NOT NULL,
ServiceName STRING NOT NULL
UNIQUE,
SubscriptionCost DOUBLE (10) NOT NULL
);

CREATE TABLE Person (
PersonID INTEGER PRIMARY KEY AUTOINCREMENT
UNIQUE
NOT NULL,
Name STRING (255) NOT NULL
);


CREATE TABLE StreamingService (
ServiceID INTEGER PRIMARY KEY AUTOINCREMENT
UNIQUE
NOT NULL,
PersonID INTEGER (10) REFERENCES Person (PersonID)
NOT NULL,
CompanyID INTEGER (10) REFERENCES Company (CompanyID)
NOT NULL,
SubscriptionEndDate DATE NOT NULL
);


CREATE TABLE AnimeAvailability (
AnimeID INTEGER (10) NOT NULL
REFERENCES Anime (AnimeID),
CompanyID INTEGER (10) NOT NULL
REFERENCES Company (CompanyID)
);











